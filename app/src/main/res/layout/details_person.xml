<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Details_Person">



    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />



<RelativeLayout
    android:layout_below="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            app:lottie_fileName="live.json"
            app:lottie_loop="true" />






    <RelativeLayout
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        >

        <ImageView
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/back"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <ImageView
            android:visibility="gone"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_share_24"
            />


    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:layout_height="100dp"
        android:id="@+id/coverImage"
        android:layout_marginTop="230dp"
        android:src="@drawable/ss"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="25dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/active" />

    <LinearLayout
        android:id="@+id/ss"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="340dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:text="Angel Sadiya"

            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/sendsms"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:background="#C31233E6"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:padding="2dp"
                    android:src="@drawable/message" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center|start"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#1D121213"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:foregroundGravity="top"
                android:src="@drawable/baseline_more_horiz_24" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_below="@id/ss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Gift Now!"
                android:textColor="#9E000000"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:drawableEnd="@drawable/right_24"
                android:gravity="end"
                android:text="Give"
                android:textColor="#A1000000"
                android:textSize="15sp"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="4"
            android:orientation="horizontal"
           >

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:id="@+id/g1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/b"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/g2"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bb"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/g3"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bbb"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/g4"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"

                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bbbb"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="4"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/g5"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"

                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bbbbbbbb"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"

                    android:id="@+id/g6"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bbbbbbb"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/g7"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bbbbbb"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:id="@+id/g8"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bbbbb"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

</RelativeLayout>