<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Call_End_After">


    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/all"
        >



        <RelativeLayout
            android:id="@+id/Activity3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DA1B1820"
            android:visibility="visible"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/topxx"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:foregroundGravity="center"
                android:src="@drawable/end" />


            <TextView
                android:id="@+id/threexxxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topxx"
                android:gravity="center"
                android:text="Call End..."
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/gnt_red" />

            <TextView
                android:layout_above="@+id/btn3"
                android:id="@+id/Textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="150dp"
                android:text="To go to the next step!!\nMust see full ads.\nthanks you"
                android:textColor="#A6E0E0E0" />

            <androidx.cardview.widget.CardView
                android:layout_alignParentBottom="true"
                android:layout_marginTop="50dp"
                android:layout_width="180dp"
                android:layout_marginBottom="96dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="30dp"
                android:clickable="true"
                android:id="@+id/btn3"
                android:foreground="?attr/selectableItemBackground"
                android:layout_centerHorizontal="true"
                android:layout_height="50dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/agreeBTN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#3F51B5"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Agree"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="22dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>